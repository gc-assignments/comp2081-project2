.landing
  // edit()
  min-height 100vh
  max-height xm(940)
  background #fad961
  background linear-gradient(to bottom, #fad961 0%,#f76b1c 100%)

.brand-logo
  vertical-align top

.brand-name
  margin-left -.5em
  margin-bottom 0
  display inline-block

  &::first-letter
    visibility hidden

.tag-line
  color white
  font-size xm(24)

.action-buttons
  @media(min-width md-width)
    // text-align center
    padding-top 3em

.main-screenshot
  width 100%
  @media(min-width md-width)
    width 90%

.features
  margin xm(150) auto xm(70)
  @media(min-height xm(940))
    margin xm(100) auto

.feature-title
  margin 1em auto .5em

.feature-name
  margin .75em auto

