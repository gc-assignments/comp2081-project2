.md-modal.md-show
  visibility visible

  ~.md-overlay
    visibility visible
    opacity 1

.md-3d-rotate-bottom.md-show>.md-content
	transform translateY(0%) rotateX(0deg)
	opacity 1

.md-overlay
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  z-index 99
  background rgba(0,0,0,0.3)
  opacity 0
  transition opacity .3s
  visibility hidden

.md-modal
	position fixed
	top 50%
	left 50%
	width 50%
	max-width 630px
	min-width 320px
	height auto
	z-index 2000
	visibility hidden
	backface-visibility hidden
	transform translateX(-50%) translateY(-50%)

.md-3d-rotate-bottom
  perspective 1300px

  >.md-content
    transform-style preserve-3d
    transform translateY(100%) rotateX(90deg)
    transform-origin 0 100%
    opacity 0
    transition all 0.3s ease-out


.md-content
	background white
	position relative
	border-radius 5px
	margin 0 auto

.md-footer
  padding .5em 2em
  >p
    font-size xm(14)

.tab
  col(1/2)
  cursor pointer
  color $light-gray
  font-size xm(28)
  font-weight 300
  border-bottom 2px solid white
  padding .4em 0
  &hover
    color $mid-gray

.tab--active
  cursor default
  color $dark-gray
  border-bottom 2px solid $orange
  &hover
    color $dark-gray

.tab-content-holder
  background $blue-gray
  color $light
  margin 0
  border 1px solid $blue-gray
  min-height xm(340)

.tab-hide
  display none

.tab-show
  display block

.hint-text
  font-size xm(12)

.tab-content
  padding 0 4em

