.posts
  background white
  border-radius 5px
  box-shadow 0 1px 4px 0 rgba(0,0,0,0.3)
  @media(min-width md-width)
    col(7/12)
    shift(1/12)

.post
  padding 2em

.blog-archives
  background $dark-gray
  color $light
  border-radius 5px
  padding-bottom 3em
  box-shadow 0 1px 4px 0 rgba(0,0,0,0.71)
  @media(min-width md-width)
    col(2/10, offset: 1/8)

  >h4
    font-size xm(24)
    font-weight 300
    color $orange
    padding-left 1.75em

.archive-item
  margin .45em auto

  >a
    &:hover
      color white
      border-bottom 1px solid $orange
