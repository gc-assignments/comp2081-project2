roboto = "Roboto", "Helvetica Neue", "Helvetica", "Arial", sans-serif
base-font = roboto

body
  color $dark-gray
  font-family base-font
  background $base-bg-color

/* base link style */
a
  text-decoration none
  color $_link-color

  &:hover
    color $_link-hover-color

h1
  font-size xm(72)

h2
h3
p
a
  font-weight 300

h2
  font-size xm(48)

h3
  font-size xm(32)

p
  font-size xm(20)

.page-title

  >span
    color $mid-gray

.no-li-style
  list-style-type none

li
  font-size xm(20)
  font-weight 300

.page-content
  padding navbar-height 0
